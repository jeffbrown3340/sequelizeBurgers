<h2>Burgers Ordered</h2>
<ul>
  {{#each burgers}}
  	{{#unless this.devoured}}
  		<li>
  			{{> burgers/details}}
  		</li>
  	{{/unless}}
  {{/each}}
</ul>

<h2>Burgers Consumed</h2>
<ul>
  {{#each burgers}}
	{{#if this.devoured}}
  		<li>
  			{{> burgers/details}}
  		</li>
  	{{/if}}
  {{/each}}
</ul>